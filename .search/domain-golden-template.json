{
  "domainTemplateVersion": "2026.02.08.1",
  "domainRegistryEntryTemplate": {
    "domain": "api.factory-wager.com",
    "zone": "factory-wager.com",
    "bucket": "bun-secrets",
    "prefix": "domains/api.factory-wager/cloudflare",
    "requiredHeader": "x-factory-domain-token",
    "tokenEnvVar": "FACTORY_WAGER_TOKEN_API"
  },
  "envTemplate": {
    "DOMAIN_REGISTRY_PATH": ".search/domain-registry.json",
    "SEARCH_BENCH_DOMAIN": "factory-wager.com",
    "FACTORY_WAGER_REQUIRED_HEADER": "x-factory-domain-token",
    "FACTORY_WAGER_TOKEN_API": "replace_me"
  },
  "secretsPlacementTemplate": {
    "bunSecrets": [
      "FACTORY_WAGER_TOKEN_API"
    ],
    "wranglerSecrets": [
      "FACTORY_WAGER_TOKEN_API"
    ]
  },
  "validationChecklist": [
    "registry_entry_added",
    "token_env_var_defined",
    "token_written_to_secrets_store",
    "domain_registry_status_shows_bucket_mapped",
    "domain_registry_status_shows_required_header_configured",
    "domain_registry_status_shows_token_present"
  ]
}
