{
  "name": "test-project",
  "version": "1.0.0",
  "description": "Test project configuration",
  "test": {
    "timeout": 10000,
    "coverage": true,
    "patterns": ["src/**/*.test.ts", "src/**/*.spec.ts"],
    "environment": {
      "NODE_ENV": "test",
      "TEST_MODE": "true"
    }
  },
  "ci": {
    "github": {
      "enabled": true,
      "annotations": true
    },
    "gitlab": {
      "enabled": false
    }
  }
}
