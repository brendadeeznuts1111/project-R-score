
#!/usr/bin/env bun

import { runESLint } from './eslint.config.ts';

// Run ESLint on staged files
const result = await runESLint({
  fix: true,
  maxWarnings: 50,
  format: 'compact',
});

if (result !== 0) {
  console.error('❌ ESLint check failed');
  process.exit(1);
}

console.log('✅ ESLint check passed');
