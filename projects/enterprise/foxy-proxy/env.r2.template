# Cloudflare R2 Configuration
# Common Credentials
VITE_R2_ACCOUNT_ID=your_cloudflare_account_id_here
VITE_R2_ACCESS_KEY_ID=your_r2_access_key_id_here
VITE_R2_SECRET_ACCESS_KEY=your_r2_secret_access_key_here

# Development Environment
VITE_R2_DEV_BUCKET_NAME=foxy-proxy-dev
VITE_R2_DEV_PUBLIC_URL=https://dev.foxyproxy.workers.dev

# Staging Environment
VITE_R2_STAGING_BUCKET_NAME=foxy-proxy-staging
VITE_R2_STAGING_PUBLIC_URL=https://staging.foxyproxy.workers.dev

# Production Environment
VITE_R2_PROD_BUCKET_NAME=foxy-proxy-prod
VITE_R2_PROD_PUBLIC_URL=https://dashboard.foxyproxy.workers.dev

# Legacy/Default (for backward compatibility)
VITE_R2_BUCKET_NAME=foxy-proxy-dev
VITE_R2_PUBLIC_URL=https://dev.foxyproxy.workers.dev

# Optional: Custom R2 domain
R2_CUSTOM_DOMAIN=registry.yourdomain.com

# Package registry configuration
REGISTRY_NAME=@mycompany
REGISTRY_URL=https://registry.yourdomain.com

# Security
JWT_SECRET=your-jwt-secret-here
ENABLE_AUTH=true
