{
  "src": "./",
  "dist": {
    "path": "./license-reports",
    "format": "json"
  },
  "license": {
    "allow": [
      "MIT",
      "Apache-2.0",
      "Apache-2.0 OR MIT",
      "BSD-3-Clause",
      "BSD-2-Clause",
      "ISC",
      "CC0-1.0",
      "Unlicense"
    ],
    "deny": [
      "GPL-3.0",
      "GPL-3.0-only",
      "GPL-3.0-or-later",
      "AGPL-3.0",
      "AGPL-3.0-only",
      "AGPL-3.0-or-later",
      "LGPL-3.0",
      "LGPL-3.0-only",
      "LGPL-3.0-or-later"
    ],
    "unknown": {
      "failOnUnknown": true,
      "failOnBlacklisted": true
    }
  },
  "packages": {
    "dependencies": true,
    "devDependencies": true,
    "peerDependencies": true,
    "optionalDependencies": true
  },
  "exclude": ["node_modules/**", ".git/**", "dist/**", "build/**", "coverage/**"]
}
