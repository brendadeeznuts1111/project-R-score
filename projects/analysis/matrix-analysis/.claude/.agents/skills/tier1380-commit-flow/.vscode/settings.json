{
	"editor.formatOnSave": true,
	"editor.defaultFormatter": "biomejs.biome",
	"editor.codeActionsOnSave": {
		"source.fixAll.biome": "explicit"
	},
	"typescript.preferences.importModuleSpecifier": "relative",
	"files.exclude": {
		"node_modules": true,
		".registry-cache": true
	},
	"search.exclude": {
		"node_modules": true,
		".registry-cache": true,
		"*.lock": true
	}
}
