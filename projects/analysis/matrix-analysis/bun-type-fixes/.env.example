# Environment Configuration for Bun Type Fixes
# Copy this to .env and adjust values as needed

# Bun Configuration
BUN_VERSION=1.3.6
NODE_ENV=development

# Test Configuration
TEST_DATABASE_PATH=:memory:
TEST_FILE_PATH=./test-output.txt
TEST_LARGE_FILE_PATH=./test-large-output.txt

# Output Configuration
OUTPUT_DIR=./dist
DOCS_DIR=./docs
LOG_LEVEL=info

# MCP Configuration
MCP_SERVER_ENABLED=true
MCP_SERVER_PORT=3001
MCP_SERVER_HOST=localhost

# Type Verification Configuration
VERIFY_AUTOLOAD_OPTIONS=true
VERIFY_SQLITE_TYPES=true
VERIFY_FILESINK_TYPES=true
VERIFY_INTEGRATION=true

# Build Configuration
BUILD_OUTDIR=./dist
BUILD_TARGET=bun
BUILD_MINIFY=false

# Development Configuration
DEV_WATCH=true
DEV_HOT_RELOAD=true
