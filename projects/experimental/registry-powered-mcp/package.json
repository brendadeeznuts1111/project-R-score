{
  "name": "@registry-mcp/workspace",
  "version": "2.4.1",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --cwd packages/core dev",
    "dashboard": "bun run dashboard/server.ts",
    "dashboard:build": "bun run dashboard/src/index.tsx --build",
    "dashboard:old": "vite --port 3000",
    "test": "bun test test/",
    "test:unit": "bun test test/unit",
    "test:integration": "bun test test/integration",
    "test:regression": "bun test test/regression",
    "test:performance": "bun test test/performance",
    "test:watch": "bun test --watch test/",
    "test:coverage": "bun test --coverage test/",
    "test:coverage:lcov": "bun test --coverage --coverage-reporter=lcov test/",
    "test:coverage:html": "bun test --coverage --coverage-reporter=html test/",
    "test:bail": "bun test --bail test/",
    "test:randomize": "bun test --randomize test/",
    "test:concurrent": "bun test --concurrent test/",
    "test:filter": "bun test -t",
    "test:changed": "bun run scripts/run-changed-tests.ts",
    "test:related": "bun test --grep $(git diff --name-only | head -1)",
    "test:update-snapshots": "bun test -u test/",
    "test:all": "bun run test/scripts/run-all.ts",
    "test:dashboard": "bun test/serve-dashboard.ts",
    "test:security": "bun test test/unit/security/url-pattern-security.test.ts",
    "test:security:runner": "bun test/scripts/security-test-runner.ts",
    "test:truncator:benchmark": "bun test/scripts/truncator-benchmark.ts",
    "demo:feature-flags": "bun scripts/feature-flags-demo.ts",
    "demo:dead-code-elimination": "bun scripts/dead-code-elimination-demo.ts",
    "test:core": "bun test --cwd packages/core",
    "test:benchmarks": "bun test --cwd packages/benchmarks",
    "bench": "bun run benchmarks/run-all.ts",
    "build": "bun run build:core && bun run build:benchmarks && bun run build:blog",
    "build:core": "bun run --cwd packages/core build",
    "build:benchmarks": "bun run --cwd packages/benchmarks build",
    "build:blog": "bun run blog/build.ts",
    "sync:r2": "bun scripts/sync-blog-to-r2.ts",
    "r2:list": "bun scripts/r2-manage.ts list",
    "r2:cleanup": "bun scripts/r2-manage.ts cleanup",
    "infra:docs": "bun scripts/generate-infra-docs.ts",
    "metrics:bun-apis": "bun scripts/bun-api-metrics-generator.ts",
    "worker:dev": "cd workers/mcp-blog-gateway && bun install && wrangler dev",
    "worker:deploy": "cd workers/mcp-blog-gateway && bun install && wrangler deploy",
    "migrate:python": "bun scripts/migrate-python-to-bun.ts"
  },
  "dependencies": {
    "@google/genai": "^1.39.0",
    "browserslist": "^4.28.1",
    "lucide-react": "^0.294.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^2.15.4",
    "sass": "^1.97.3"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.7.0",
    "fast-check": "^4.5.3",
    "typescript": "^5.9.3",
    "vite": "^5.4.21"
  },
  "engines": {
    "bun": ">=1.3.8"
  },
  "author": "mike.hunt@factory.wager.com",
  "license": "MIT",
  "description": "MCP-powered package registry workspace with React dashboard and benchmarks",
  "publishConfig": {
    "registry": "https://npm.factory-wager.com"
  }
}
