        CORE[@golden/core<br/>50KB, 0 deps]
        RSS[@golden/rss<br/>30KB + fast-xml]
        CLI[@golden/cli<br/>40KB]
        TEMPLATES[@golden/templates<br/>Assets only]
        UI[@golden/ui<br/>20KB]
    end
    
    subgraph "Applications"
        FULL[golden-template<br/>Full bundle]
    end
    
