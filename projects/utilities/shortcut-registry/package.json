{
  "name": "shortcut-registry",
  "version": "1.0.0",
  "description": "Keyboard shortcut management system with database persistence, conflict detection, profiles, and macros",
  "type": "module",
  "main": "src/core/registry.ts",
  "scripts": {
    "dev": "bun run test-integration.ts",
    "dev:watch": "bun --watch run test-integration.ts",
    "dev:debug": "bun --inspect run test-integration.ts",
    "dev:api": "bun run src/api/index.ts",
    "dev:api:watch": "bun --watch run src/api/index.ts",
    "test": "bun test",
    "test:watch": "bun --watch test",
    "test:coverage": "bun test --coverage",
    "test:integration": "bun run test-integration.ts",
    "build": "bun build src/core/registry.ts --outdir ./dist --target bun",
    "build:check": "tsc --noEmit",
    "build:example": "bun build examples/macro-example.ts --outdir ./dist --target bun",
    "build:example:watch": "bun --watch build examples/macro-example.ts --outdir ./dist --target bun",
    "cli": "bun run src/cli/index.ts",
    "cli:demo": "bash examples/cli-demo.sh",
    "db:migrate": "bun run src/database/migrations.ts",
    "db:reset": "bun run src/database/reset.ts",
    "db:seed": "bun run src/database/seeds.ts",
    "db:backup": "bun run src/database/backup.ts",
    "db:health": "bun run src/database/health.ts",
    "lint": "eslint src/**/*.ts tests/**/*.ts --ext .ts || true",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\" || true",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\" || true",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist node_modules/.cache",
    "prepublish": "bun run type-check && bun run test"
  },
  "keywords": [
    "shortcuts",
    "keyboard",
    "registry",
    "profiles",
    "macros"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "bun": ">=1.3.8"
  },
  "devDependencies": {
    "@types/node": "^20.19.30",
    "typescript": "^5.9.3"
  },
  "publishConfig": {
    "registry": "https://registry.factory-wager.com"
  }
}
