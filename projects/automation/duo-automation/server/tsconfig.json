{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "ES2017",
      "ES2015",
      "DOM"
    ],
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "server/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
