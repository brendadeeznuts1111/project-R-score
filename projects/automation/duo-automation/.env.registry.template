# üóÇÔ∏è Empire Pro Registry Configuration Template
# Copy this file to .env.registry and customize for your environment

# =============================================================================
# REGISTRY CORE CONFIGURATION
# =============================================================================

# Registry type and mode
REGISTRY_TYPE=private
REGISTRY_MODE=production
REGISTRY_VERSION=3.7.0

# Registry identification
REGISTRY_NAME=empire-pro-registry
REGISTRY_DOMAIN=registry.empire-pro-cli.com
REGISTRY_DESCRIPTION=Empire Pro Private Component Registry

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Primary database (PostgreSQL recommended)
REGISTRY_DB_TYPE=postgresql
REGISTRY_DB_HOST=localhost
REGISTRY_DB_PORT=5432
REGISTRY_DB_NAME=empire_registry
REGISTRY_DB_USER=empire_registry_user
REGISTRY_DB_PASSWORD=your_secure_db_password_here
REGISTRY_DB_SSL=true
REGISTRY_DB_POOL_SIZE=20

# Redis for caching and sessions
REGISTRY_REDIS_HOST=localhost
REGISTRY_REDIS_PORT=6379
REGISTRY_REDIS_PASSWORD=your_redis_password_here
REGISTRY_REDIS_DB=0
REGISTRY_REDIS_TTL=3600

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================

# Storage backend (s3, gcs, azure, local)
REGISTRY_STORAGE_TYPE=s3
REGISTRY_STORAGE_REGION=us-east-1
REGISTRY_STORAGE_BUCKET=empire-pro-registry
REGISTRY_STORAGE_ACCESS_KEY=your_s3_access_key
REGISTRY_STORAGE_SECRET_KEY=your_s3_secret_key
REGISTRY_STORAGE_ENDPOINT=https://s3.amazonaws.com

# Local storage fallback
REGISTRY_LOCAL_STORAGE_PATH=/var/lib/empire-registry
REGISTRY_LOCAL_STORAGE_MAX_SIZE=100GB

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# JWT Configuration
REGISTRY_JWT_SECRET=your_super_secure_jwt_secret_at_least_32_chars
REGISTRY_JWT_EXPIRES_IN=24h
REGISTRY_JWT_REFRESH_EXPIRES_IN=7d

# API Keys
REGISTRY_API_KEY=your_api_key_for_registry_access
REGISTRY_API_SECRET=your_api_secret_for_registry_access

# SSL/TLS Configuration
REGISTRY_SSL_ENABLED=true
REGISTRY_SSL_CERT_PATH=/etc/ssl/certs/registry.crt
REGISTRY_SSL_KEY_PATH=/etc/ssl/private/registry.key

# CORS Configuration
REGISTRY_CORS_ORIGIN=https://empire-pro-cli.com
REGISTRY_CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
REGISTRY_CORS_HEADERS=Content-Type,Authorization,X-Requested-With

# =============================================================================
# CATALOG CONFIGURATION
# =============================================================================

# Catalog settings
REGISTRY_CATALOG_ENABLED=true
REGISTRY_CATALOG_AUTO_SYNC=true
REGISTRY_CATALOG_SYNC_INTERVAL=300
REGISTRY_CATALOG_MAX_ITEMS=10000

# Repository synchronization
REGISTRY_GITHUB_TOKEN=your_github_personal_access_token
REGISTRY_GITHUB_ORG=empire-pro
REGISTRY_GITHUB_SYNC_ENABLED=true

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Logging configuration
REGISTRY_LOG_LEVEL=info
REGISTRY_LOG_FORMAT=json
REGISTRY_LOG_FILE=/var/log/empire-registry/registry.log
REGISTRY_LOG_MAX_SIZE=100MB
REGISTRY_LOG_MAX_FILES=10

# Metrics and monitoring
REGISTRY_METRICS_ENABLED=true
REGISTRY_METRICS_PORT=9090
REGISTRY_HEALTH_CHECK_ENABLED=true
REGISTRY_HEALTH_CHECK_PORT=8080

# Prometheus metrics
REGISTRY_PROMETHEUS_ENABLED=true
REGISTRY_PROMETHEUS_PORT=9091

# =============================================================================
# PERFORMANCE & SCALING
# =============================================================================

# Performance settings
REGISTRY_CACHE_ENABLED=true
REGISTRY_CACHE_TTL=300
REGISTRY_CACHE_MAX_SIZE=1000
REGISTRY_RATE_LIMIT_ENABLED=true
REGISTRY_RATE_LIMIT_REQUESTS=1000
REGISTRY_RATE_LIMIT_WINDOW=60

# Scaling configuration
REGISTRY_WORKERS=4
REGISTRY_MAX_CONNECTIONS=1000
REGISTRY_TIMEOUT=30
REGISTRY_KEEP_ALIVE=30

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================

# Email notifications
REGISTRY_EMAIL_ENABLED=false
REGISTRY_EMAIL_SMTP_HOST=smtp.gmail.com
REGISTRY_EMAIL_SMTP_PORT=587
REGISTRY_EMAIL_USERNAME=your_email@gmail.com
REGISTRY_EMAIL_PASSWORD=your_email_password
REGISTRY_EMAIL_FROM=noreply@empire-pro-cli.com

# Slack notifications
REGISTRY_SLACK_ENABLED=false
REGISTRY_SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
REGISTRY_SLACK_CHANNEL=#registry-updates

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================

# Backup configuration
REGISTRY_BACKUP_ENABLED=true
REGISTRY_BACKUP_SCHEDULE=0 2 * * *
REGISTRY_BACKUP_RETENTION=30
REGISTRY_BACKUP_STORAGE=s3
REGISTRY_BACKUP_ENCRYPTION=true

# Recovery settings
REGISTRY_RECOVERY_POINT_INTERVAL=3600
REGISTRY_RECOVERY_MAX_POINTS=24

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================

# Development mode
REGISTRY_DEBUG=false
REGISTRY_DEV_MODE=false
REGISTRY_MOCK_DATA=false
REGISTRY_SEED_DATA=true

# Testing configuration
REGISTRY_TEST_DB_NAME=empire_registry_test
REGISTRY_TEST_REDIS_DB=1
REGISTRY_TEST_STORAGE_PATH=/tmp/empire-registry-test

# =============================================================================
# INTEGRATION CONFIGURATION
# =============================================================================

# Cloudflare Workers integration
REGISTRY_CLOUDFLARE_ENABLED=true
REGISTRY_CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
REGISTRY_CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
REGISTRY_CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id

# Docker integration
REGISTRY_DOCKER_ENABLED=true
REGISTRY_DOCKER_REGISTRY=registry.empire-pro-cli.com
REGISTRY_DOCKER_USERNAME=empire-pro
REGISTRY_DOCKER_PASSWORD=your_docker_password

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Feature toggles
REGISTRY_FEATURE_ANALYTICS=true
REGISTRY_FEATURE_WEBHOOKS=true
REGISTRY_FEATURE_DEPENDENCY_GRAPH=true
REGISTRY_FEATURE_SECURITY_SCANNING=true
REGISTRY_FEATURE_AUTOMATED_TESTS=true
REGISTRY_FEATURE_PERFORMANCE_MONITORING=true

# Experimental features
REGISTRY_EXPERIMENTAL_AI_SEARCH=false
REGISTRY_EXPERIMENTAL_BLOCKCHAIN=false
REGISTRY_EXPERIMENTAL_QUANTUM_CRYPTO=false

# =============================================================================
# COMPLIANCE & AUDIT
# =============================================================================

# Compliance settings
REGISTRY_AUDIT_ENABLED=true
REGISTRY_AUDIT_LOG_FILE=/var/log/empire-registry/audit.log
REGISTRY_AUDIT_RETENTION=365
REGISTRY_GDPR_COMPLIANT=true
REGISTRY_SOX_COMPLIANT=true

# License management
REGISTRY_LICENSE_CHECK_ENABLED=true
REGISTRY_ALLOWED_LICENSES=MIT,Apache-2.0,BSD-3-Clause,ISC
REGISTRY_BLOCKED_LICENSES=GPL-3.0,AGPL-3.0

# =============================================================================
# CLUSTER CONFIGURATION
# =============================================================================

# High availability
REGISTRY_HA_ENABLED=false
REGISTRY_CLUSTER_SIZE=3
REGISTRY_CLUSTER_NODE_ID=node-1
REGISTRY_CLUSTER_DISCOVERY=static

# Load balancing
REGISTRY_LB_ALGORITHM=round_robin
REGISTRY_LB_HEALTH_CHECK_INTERVAL=30
REGISTRY_LB_STICKY_SESSIONS=false

# =============================================================================
# CUSTOM CONFIGURATION
# =============================================================================

# Custom registry plugins
REGISTRY_PLUGINS_ENABLED=false
REGISTRY_PLUGIN_DIR=/opt/empire-registry/plugins
REGISTRY_CUSTOM_MIDDLEWARE=false

# Enterprise features
REGISTRY_ENTERPRISE_MODE=false
REGISTRY_SSO_ENABLED=false
REGISTRY_SSO_PROVIDER=oidc
REGISTRY_SSO_CLIENT_ID=your_sso_client_id
REGISTRY_SSO_CLIENT_SECRET=your_sso_client_secret

# =============================================================================
# VALIDATION OVERRIDES
# =============================================================================

# Skip validation (not recommended for production)
REGISTRY_SKIP_VALIDATION=false
REGISTRY_SKIP_SSL_VALIDATION=false
REGISTRY_SKIP_DB_VALIDATION=false
REGISTRY_SKIP_STORAGE_VALIDATION=false

# Custom validation rules
REGISTRY_CUSTOM_VALIDATION=false
REGISTRY_VALIDATION_STRICT=true
REGISTRY_VALIDATION_TIMEOUT=30
