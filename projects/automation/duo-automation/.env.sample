# Phone Intelligence System - Environment Configuration

# Required API Keys
IPQS_API_KEY=your-ipqs-key
R2_ACCOUNT_ID=your-r2-account-id
R2_ACCESS_KEY_ID=your-r2-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret
TWILIO_SID=your-twilio-sid
TWILIO_TOKEN=your-twilio-token

# Optional (for enhanced features)
VONAGE_API_KEY=your-vonage-key
BANDWIDTH_ACCOUNT_ID=your-bandwidth-id
CF_API_TOKEN=your-cloudflare-token
CF_ZONE_ID=your-cloudflare-zone
SLACK_WEBHOOK=your-slack-webhook

# Bun S3 Storage (Cloudflare R2)
# IMPORTANT: These credentials have been rotated. Get new credentials from Cloudflare R2 dashboard.
S3_ACCESS_KEY_ID=your-r2-access-key-id
S3_SECRET_ACCESS_KEY=your-r2-secret-access-key
S3_BUCKET=factory-wager-packages
S3_ENDPOINT=https://YOUR_ACCOUNT_ID.r2.cloudflarestorage.com
S3_REGION=auto

# Cloudflare Integration
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token

# API Configuration
API_URL=https://api.empire-pro.com
STORAGE_URL=https://storage.empire-pro.com
DASHBOARD_PORT=3000

# Server Ports Configuration
WEB_SERVER_PORT=8080
REDIS_PORT=6379
STORAGE_DASHBOARD_PORT=3004
ANALYTICS_DASHBOARD_PORT=3005
ADMIN_DASHBOARD_PORT=3006
METRICS_DASHBOARD_PORT=3001
SYSTEM_DASHBOARD_PORT=3000
CASHAPP_DASHBOARD_PORT=3007
EMPIRE_COMMAND_DASHBOARD_PORT=3008
TOKEN_MANAGEMENT_DASHBOARD_PORT=3009
ENHANCED_DASHBOARD_PORT=3010

# Email Service Ports
IMAP_SSL_PORT=993
SMTP_PORT=587
SMTP_SSL_PORT=465
POSTGRES_PORT=5432

# External Service Ports
OTLP_PORT=4318
DEVICE_ENDPOINT_PORT=26689

# Database & Cache URLs
REDIS_URL=redis://localhost:6379
POSTGRES_URL=postgresql://localhost:5432/duo_automation

# External Service URLs
MAPS_SERVICE_URL=https://maps.googleapis.com
CAPTCHA_SERVICE_URL=http://2captcha.com
ANTI_CAPTCHA_SERVICE_URL=https://api.anti-captcha.com
DUOPLUS_ENDPOINT=https://api.duoplus.app/analytics
APPLE_ID_URL=https://appleid.apple.com

# Security & Authentication
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_32_character_encryption_key

# Performance & Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30000
LOG_LEVEL=info

# Phone Intelligence Specific
PHONE_INTELLIGENCE_CACHE_TTL=86400
PHONE_INTELLIGENCE_BATCH_SIZE=1000
PHONE_INTELLIGENCE_MAX_CONCURRENCY=100

# Production Configuration
NODE_ENV=production
DEBUG=false
ENABLE_CORS=false
CORS_ORIGIN=https://empire-pro.com
