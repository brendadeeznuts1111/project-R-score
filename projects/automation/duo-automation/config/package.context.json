{
  "name": "duoplus-automation",
  "version": "1.0.0",
  "description": "AI-optimized automation platform with context-aware architecture",
  "scripts": {
    "dev": "bun --watch src/main.ts",
    "build": "bun build src/main.ts --outdir build --target bun",
    "build:context": "bun tools/context-token-manager.ts types > src/generated/context-types.ts",
    "build:analyze": "bun tools/advanced-context-engine.ts export > build/context-graph.json",
    "test": "bun test",
    "test:context": "bun tools/context-token-manager.ts token src/@core/utils/crypto.ts",
    "context:query": "bun tools/advanced-context-engine.ts query",
    "context:suggest": "bun tools/advanced-context-engine.ts suggest",
    "lint": "bun run lint:eslint && bun run lint:context",
    "lint:eslint": "eslint src --ext .ts,.tsx",
    "lint:context": "bun tools/context-validator.ts",
    "clean": "rm -rf build dist .bun-cache",
    "setup": "bun scripts/@utilities/enhanced-setup.sh",
    "deploy:dev": "bun scripts/@devops/deploy-development.sh",
    "deploy:prod": "bun scripts/@devops/deploy-production.sh"
  },
  "dependencies": {
    "@types/bun": "^1.3.6",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0"
  },
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=18.0.0"
  },
  "context": {
    "enabled": true,
    "tokens": {
      "core": "@core",
      "api": "@api", 
      "automation": "@automation",
      "venmo": "@venmo",
      "payment": "@payment",
      "tools": "@tools",
      "platform": "@platform"
    },
    "build": {
      "contextAware": true,
      "tokenGrouping": true,
      "dependencyAnalysis": true,
      "optimization": "ai-driven"
    },
    "testing": {
      "contextIsolation": true,
      "tokenBased": true,
      "smartSelection": true
    }
  },
  "workspaces": [
    "packages/@core/*",
    "packages/@tools/*", 
    "packages/@platform/*"
  ]
}
