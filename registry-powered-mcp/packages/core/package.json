{
  "name": "@registry-mcp/core",
  "version": "2.4.1",
  "description": "Hardened Hyper-Scale Lattice & Identity Vault - Registry-Powered Model Context Protocol",
  "module": "src/index.ts",
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./core/*": "./src/core/*.ts",
    "./api/*": "./src/api/*.ts",
    "./parsers/*": "./src/parsers/*.ts",
    "./instrumentation/*": "./src/instrumentation/*.ts"
  },
  "scripts": {
    "dev": "bun run src/index.ts",
    "start": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun --minify",
    "build:standalone": "bun build --compile --minify src/index.ts --outfile registry-node",
    "test": "bun test"
  },
  "keywords": [
    "mcp",
    "registry",
    "bun",
    "lattice",
    "urlpattern",
    "toml",
    "hardened",
    "performance",
    "security"
  ],
  "author": "Registry Core Team",
  "license": "MIT",

  "peerDependencies": {
    "typescript": "^5"
  },
  "engines": {
    "bun": ">=1.3.6"
  }
}
