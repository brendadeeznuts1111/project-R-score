REDIS_PASSWORD=

# Betting Platform Integration
BETTING_API_URL=https://plive.sportswidgets.pro/manager-tools/
BETTING_SESSION_TOKEN=your-plive-session-token
BETTING_API_KEY=your-betting-platform-api-key
