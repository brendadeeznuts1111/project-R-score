{
  "name": "my-bun-app",
  "version": "1.0.0",
  "portConfig": {
    "port": 3000,
    "range": {
      "start": 3000,
      "end": 3100
    },
    "maxConnections": 512,
    "connectionTimeout": 30000,
    "keepAlive": true,
    "bunEnvironment": {
      "BUN_CONFIG_MAX_HTTP_REQUESTS": "512",
      "BUN_CONFIG_MAX_HTTP_REQUESTS_PER_HOST": "6"
    }
  },
  "server": {
    "host": "localhost",
    "cors": true,
    "compression": true,
    "staticFiles": "./public"
  },
  "scripts": {
    "start": "bun run index.ts",
    "dev": "bun --watch index.ts"
  },
  "env": {
    "development": {
      "BUN_CONFIG_MAX_HTTP_REQUESTS": "100",
      "BUN_CONFIG_MAX_HTTP_REQUESTS_PER_HOST": "6"
    },
    "production": {
      "BUN_CONFIG_MAX_HTTP_REQUESTS": "512",
      "BUN_CONFIG_MAX_HTTP_REQUESTS_PER_HOST": "12"
    }
  }
}
