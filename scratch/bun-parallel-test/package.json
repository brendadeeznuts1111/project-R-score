{
  "name": "bun-parallel-test",
  "version": "1.0.0",
  "workspaces": ["packages/*"],
  "scripts": {
    "greet": "echo 'Hello from greet'",
    "prebuild": "echo '[prebuild] Cleaning dist...' && sleep 0.3 && echo '[prebuild] Clean done'",
    "build": "bun run build.ts",
    "postbuild": "echo '[postbuild] Generating sourcemaps...' && sleep 0.2 && echo '[postbuild] Sourcemaps done'",
    "build:css": "bun run build-css.ts",
    "build:js": "bun run build-js.ts",
    "build:assets": "bun run build-assets.ts",
    "lint": "bun run lint.ts",
    "lint:ts": "bun run lint.ts",
    "lint:css": "echo '[lint:css] CSS looks good'",
    "typecheck": "bun run typecheck.ts",
    "test": "bun run test-runner.ts",
    "slow": "bun run slow.ts",
    "fail": "bun run fail.ts",
    "env-check": "bun run env-check.ts"
  }
}
