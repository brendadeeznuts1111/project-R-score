# Git attributes for consistent file handling across platforms

# Auto detect text files and perform LF normalization
* text=auto

# Explicitly declare text files you want to always be normalized and converted
# to native line endings on checkout
*.ts text eol=lf
*.js text eol=lf
*.tsx text eol=lf
*.jsx text eol=lf
*.json text eol=lf
*.md text eol=lf
*.html text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.toml text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.conf text eol=lf
*.sh text eol=lf
*.bash text eol=lf
*.zsh text eol=lf

# Denote all files that are truly binary and should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.pdf binary
*.zip binary
*.tar.gz binary
*.tgz binary
*.lockb binary

# Database files
*.db binary
*.sqlite binary
*.sqlite3 binary

# Bun lockfile
bun.lockb binary

# Executables
*.exe binary

# Ensure shell scripts have executable permissions
*.sh text eol=lf
*.bash text eol=lf

# Markdown files
*.md text eol=lf diff=markdown

# TypeScript/JavaScript files - use linguist for GitHub
*.ts linguist-language=TypeScript
*.tsx linguist-language=TypeScript
*.js linguist-language=JavaScript
*.jsx linguist-language=JavaScript

# Configuration files
*.toml linguist-language=TOML
*.yaml linguist-language=YAML
*.yml linguist-language=YAML

# Exclude generated files from language stats
*.min.js linguist-generated=true
*.min.css linguist-generated=true
dist/* linguist-generated=true
build/* linguist-generated=true
