#!/bin/bash

# FactoryWager CLI Wrapper Script
# Usage: ./fw-cli <command> [options]

set -e

# Get script directory
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
CLI_SCRIPT="$SCRIPT_DIR/factory-wager-cli.js"

# Check if Node.js is available
if ! command -v node &> /dev/null; then
    echo "❌ Node.js is required but not installed. Please install Node.js first."
    exit 1
fi

# Check if CLI script exists
if [ ! -f "$CLI_SCRIPT" ]; then
    echo "❌ FactoryWager CLI script not found at: $CLI_SCRIPT"
    exit 1
fi

# Check if API token is set
if [ -z "$FACTORY_WAGER_TOKEN" ] && [ ! -f "$HOME/.fw-config.json" ]; then
    echo "⚠️  FactoryWager API token not configured."
    echo "   Set FACTORY_WAGER_TOKEN environment variable or run: ./fw-cli auth setup"
fi

# Run the CLI
node "$CLI_SCRIPT" "$@"
