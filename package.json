  "permissions": {
    "cli": {
      "admin": {
        "description": "Full administrative access",
        "commands": ["*"],
        "scopes": ["read", "write", "delete", "admin"]
      },
      "developer": {
        "description": "Developer access",
        "commands": ["dev", "test", "lint", "build"],
        "scopes": ["read", "write"]
      },
      "viewer": {
        "description": "Read-only access",
        "commands": ["dashboard", "logs:view", "status"],
        "scopes": ["read"]
      }
    },
    "api": {
      "public": {
        "endpoints": ["/api/public/*"],
        "methods": ["GET"],
        "rate-limit": "100/hour"
      },
      "authenticated": {
        "endpoints": ["/api/user/*", "/api/data/*"],
        "methods": ["GET", "POST", "PUT"],
        "rate-limit": "1000/hour"
      },
      "admin": {
        "endpoints": ["/api/admin/*"],
        "methods": ["*"],
        "rate-limit": "unlimited"
      }
    }
  },
  "cheatsheets": {
    "cli": {
      "development": {
        "description": "Development workflow commands",
        "commands": {
          "Start Development": "bun run dev",
