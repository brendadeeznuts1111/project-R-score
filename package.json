{
  "name": "bun-typedarray-docs",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch server/server-enhanced.ts",
    "start": "bun run server/server-enhanced.ts",
    "start:content-type": "bun run server/content-type-server.ts",
    "build": "bun run scripts/build.ts",
    "test": "bun test",
    "test:unit": "bun test",
    "test:endpoints": "curl http://localhost:3000/test/fetch | bun -p",
    "test:content-types": "bun run tests/test-content-types.ts",
    "test:ui-quality": "bun run tests/test-ui-quality.ts",
    "test:accessibility": "bun run tests/test-accessibility.ts",
    "test:all": "bun run test:ui-quality && bun run test:accessibility && bun run test:content-types",
    "fetch:docs": "bun run examples/fetch-example.js",
    "fetch:advanced": "bun run services/advanced-fetch-service.ts",
    "content-type": "bun run services/content-type-demo.ts",
    "verbose": "bun run services/verbose-fetch-demo.ts",
    "urls": "curl http://localhost:3000/api/typedarray/urls | bun -p",
    "rss": "curl http://localhost:3000/feed/rss | bun -p",
    "demo": "curl http://localhost:3000/api/advanced-demo",
    "dashboard:ansi": "bun run lib/ansi-dashboard.ts",
    "dashboard:live": "bun -e \"import('./lib/ansi-dashboard.ts').then(m=>m.startLiveDashboard())\"",
    "docs:scrape": "bun run lib/docs-scraper.ts",
    "docs:validate": "bun -e \"import('./lib/docs-scraper.ts').then(m=>m.generateValidationReport().then(console.log))\"",
    "report:generate": "bun run lib/report-generator.ts",
    "markdown:ansi": "bun run lib/enhanced-markdown.ts README.md ansi",
    "markdown:styled": "bun run lib/enhanced-markdown.ts docs/styling-demo.md ansi",
    "markdown:html": "bun run lib/enhanced-markdown.ts README.md html",
    "markdown:links": "bun run lib/enhanced-markdown.ts docs/api.md links",
    "markdown:headings": "bun run lib/enhanced-markdown.ts README.md headings",
    "markdown:plain": "bun run lib/enhanced-markdown.ts README.md plain",
    "markdown:official": "bun run lib/official-markdown-options.ts demo",
    "markdown:compare": "bun run lib/official-markdown-options.ts compare",
    "markdown:gfm": "bun run lib/official-markdown-options.ts gfm",
    "markdown:extended": "bun run lib/official-markdown-options.ts extended",
    "urls:extract": "bun -e \"const urls=[];Bun.markdown.render(await Bun.file(process.argv[2]||'docs/api.md').text(),{link:(t,{href})=>{urls.push(href);return null;},paragraph:()=>null,heading:()=>null});console.log(urls.join('\\n'));\"",
    "validate:pointers:save": "bun scripts/validate-pointers.ts --save",
    "validate:pointers:compare": "bun scripts/validate-pointers.ts --compare"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0"
  },
  "devDependencies": {
    "@types/bun": "^1.3.8"
  }
}