          "Generate Rule": "bun run rip-conform --pattern 'fs\\.'",
          "Grep Non-Bun": "bun run grep:non-bun",
          "Rebuild Index": "bun run index:rg"
        }
      }
    },
    "code": {
      "typescript": {
        "description": "TypeScript patterns and examples",
        "examples": {
          "Async Function": "async function fetchData(): Promise<Data> { return await fetch('/api/data'); }",
          "Error Handling": "try { await riskyOperation(); } catch (error) { console.error('Operation failed:', error); }",
          "Type Guard": "function isString(value: unknown): value is string { return typeof value === 'string'; }"
        }
      },
      "bun": {
        "description": "Bun-specific patterns",
        "examples": {
          "File Read": "const content = await Bun.file('./data.txt').text();",
          "HTTP Server": "const server = Bun.serve({ port: 3000, fetch(req) { return new Response('Hello'); } });",
          "SQLite": "const db = new Database('data.db'); const results = db.query('SELECT * FROM users').all();"
        }
      }
    }
