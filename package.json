    "admin": "https://admin.factory-wager.com",
    "blog": "https://blog.factory-wager.com",
    "status": "https://status.factory-wager.com"
  },
  "cdn": {
    "primary": "https://cdn.factory-wager.com",
    "assets": "https://assets.factory-wager.com",
    "static": "https://static.factory-wager.com",
    "media": "https://media.factory-wager.com",
    "regions": {
      "us-east": "https://cdn-us-east.factory-wager.com",
      "us-west": "https://cdn-us-west.factory-wager.com",
      "eu-west": "https://cdn-eu.factory-wager.com",
      "asia-pacific": "https://cdn-ap.factory-wager.com"
    },
    "cache": {
      "assets": "1y",
      "static": "30d",
      "media": "90d",
      "api": "5m"
    },
    "compression": {
      "enabled": true,
      "algorithms": ["gzip", "brotli", "zstd"],
      "level": "maximum"
    },
    "security": {
      "https": true,
      "cors": {
        "origins": ["https://factory-wager.com", "https://docs.factory-wager.com"],
        "methods": ["GET", "HEAD", "OPTIONS"]
      },
      "headers": {
        "X-Content-Type-Options": "nosniff",
        "X-Frame-Options": "DENY",
        "X-XSS-Protection": "1; mode=block"
      }
    }
  },
  "buckets": {
    "storage": "factorywager-storage",
    "backups": "factorywager-backups", 
    "logs": "factorywager-logs",
    "cache": "factorywager-cache",
    "uploads": "factorywager-uploads",
    "secrets": "factorywager-secrets"
  },
  "apiKeys": {
    "management": {
      "provider": "internal-wiki",
      "endpoint": "https://docs.factory-wager.com/api/keys",
      "rotation": "90d",
      "lifecycle": {
        "creation": "automatic",
        "expiration": "90d",
        "renewal": "7d-before-expiry",
        "revocation": "immediate"
      }
    },
    "types": {
      "service": {
        "description": "Service-to-service authentication",
        "permissions": ["read", "write"],
        "rate-limit": "10000/hour",
        "auto-rotate": true
      },
      "user": {
        "description": "User-specific API keys",
        "permissions": ["read"],
        "rate-limit": "1000/hour",
        "auto-rotate": false
      },
      "admin": {
        "description": "Administrative access keys",
        "permissions": ["read", "write", "delete", "admin"],
        "rate-limit": "unlimited",
        "auto-rotate": true,
        "requires-approval": true
      },
      "readonly": {
        "description": "Read-only access for monitoring",
        "permissions": ["read"],
        "rate-limit": "500/hour",
        "auto-rotate": false
      }
    },
    "security": {
      "encryption": "AES-256-GCM",
      "hashing": "SHA-256",
      "min-length": 32,
      "require-special-chars": true,
      "audit-log": true
    },
    "integration": {
      "bun-secrets": {
        "enabled": true,
        "store": "factorywager-secrets",
        "namespace": "api-keys",
        "sync": "real-time",
        "encryption": "AES-256-GCM"
      },
      "wiki": {
        "endpoint": "https://docs.factory-wager.com",
        "api-path": "/api/v1/keys",
        "documentation": "/api-keys",
        "sync": "real-time"
      },
      "notifications": {
        "slack": "#api-keys",
        "email": ["admin@factory-wager.com", "security@factory-wager.com"],
        "events": ["created", "rotated", "expired", "revoked"]
      }
    }
  },
  "monitoring": {
    "observability": {
      "provider": "prometheus",
      "endpoint": "https://metrics.factory-wager.com",
      "retention": "30d",
      "metrics": {
        "application": ["cpu", "memory", "throughput", "latency"],
        "business": ["users", "transactions", "conversions", "revenue"],
        "infrastructure": ["disk", "network", "database", "cache"]
      }
    },
    "logging": {
      "level": "info",
      "format": "json",
      "destinations": {
        "console": true,
        "file": "/var/log/factorywager/app.log",
        "elasticsearch": "https://logs.factory-wager.com",
        "cloudwatch": "arn:aws:logs:us-east-1:123456789:log-group:/factorywager"
      },
      "retention": "90d"
    },
    "tracing": {
      "provider": "jaeger",
      "endpoint": "https://tracing.factory-wager.com",
      "sampling": "0.1",
      "services": ["api", "auth", "database", "cache", "queue"]
    },
    "alerts": {
      "channels": {
        "slack": "#alerts",
        "email": ["ops@factory-wager.com"],
        "pagerduty": "factorywager-operations"
      },
      "rules": {
        "high-error-rate": "error_rate > 5% for 5m",
        "high-latency": "p95_latency > 1000ms for 10m",
        "memory-usage": "memory_usage > 90% for 2m",
        "disk-space": "disk_usage > 85%"
      }
    }
  },
  "deployment": {
    "environments": {
      "development": {
        "region": "us-east-1",
        "cluster": "factorywager-dev",
        "replicas": 1,
        "resources": {
          "cpu": "500m",
          "memory": "512Mi"
        }
      },
      "staging": {
        "region": "us-east-1",
        "cluster": "factorywager-staging",
        "replicas": 2,
        "resources": {
          "cpu": "1000m",
          "memory": "1Gi"
        }
      },
      "production": {
        "regions": ["us-east-1", "us-west-2", "eu-west-1"],
        "cluster": "factorywager-prod",
        "replicas": 5,
        "resources": {
          "cpu": "2000m",
          "memory": "2Gi"
        },
        "autoscaling": {
          "min": 3,
          "max": 20,
          "target-cpu": "70%",
          "target-memory": "80%"
        }
      }
    },
    "strategy": {
      "type": "rolling",
      "max-unavailable": "25%",
      "max-surge": "25%",
      "progress-deadline": "600s"
    },
    "health-checks": {
      "readiness": "/health/ready",
      "liveness": "/health/live",
      "startup": "/health/startup",
      "interval": "30s",
      "timeout": "5s",
      "threshold": 3
    }
  },
