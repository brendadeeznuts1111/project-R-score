# Bun File Analyzer Stack Environment Configuration
# Copy this file to .env and customize as needed

# Server Configuration
PORT=3879                    # Frontend server port
API_PORT=3005                # API server port
NODE_ENV=development         # Environment: development, production, test

# Bun Runtime Configuration
BUN_RUNTIME_TYPE=node        # Runtime type: node, bun
BUN_RUNTIME_TRANSPORT=http   # Transport: http, tcp

# Build Configuration
BUN_BUILD_MINIFY=false       # Minify build output
BUN_BUILD_SOURCEMAP=true     # Generate source maps
BUN_BUILD_TARGET=browser     # Build target: browser, node, bun

# Development Features
BUN_HOT_RELOAD=true          # Enable hot reload
BUN_REACT_FAST_REFRESH=true  # Enable React Fast Refresh

# API Configuration
API_CORS_ORIGIN=http://localhost:3879    # CORS allowed origin
API_MAX_FILE_SIZE=104857600              # Max file size (100MB)
API_TIMEOUT=30000                        # Request timeout (30s)
API_RATE_LIMIT=100                       # Requests per minute

# Security Configuration
API_JWT_SECRET=your-secret-key-here     # JWT secret key
API_ENCRYPTION_KEY=your-encryption-key  # File encryption key
SESSION_SECRET=your-session-secret      # Session management secret

# Database Configuration (if needed)
DATABASE_URL=sqlite:./data/app.db       # Database connection string
REDIS_URL=redis://localhost:6379         # Redis connection (optional)

# Logging Configuration
LOG_LEVEL=info                          # Log level: debug, info, warn, error
LOG_FORMAT=json                        # Log format: json, pretty
LOG_FILE=logs/app.log                  # Log file path
LOG_MAX_SIZE=10MB                      # Max log file size
LOG_ROTATION=daily                     # Log rotation: daily, weekly

# Performance Configuration
CACHE_TTL=3600                         # Cache TTL in seconds
COMPRESSION=true                       # Enable gzip compression
WORKER_THREADS=4                       # Number of worker threads

# Feature Flags
ENABLE_ANALYTICS=false                 # Enable analytics tracking
ENABLE_METRICS=true                    # Enable performance metrics
ENABLE_DEBUG_MODE=false                # Enable debug endpoints
ENABLE_MOCK_APIS=false                 # Enable mock API responses

# External Services
SENTRY_DSN=                            # Sentry error tracking DSN
ANALYTICS_ID=                         # Google Analytics ID
WEBHOOK_URL=                          # Webhook notification URL

# Development Tools
ENABLE_DEV_DASHBOARD=true              # Enable development dashboard
ENABLE_SWAGGER_UI=false               # Enable API documentation
ENABLE_PLAYGROUND=false               # Enable GraphQL playground

# Build Optimization
TREE_SHAKING=true                      # Enable tree shaking
CODE_SPLITTING=true                    # Enable code splitting
LAZY_LOADING=true                      # Enable lazy loading

# Monitoring & Health
HEALTH_CHECK_INTERVAL=30000            # Health check interval (ms)
METRICS_COLLECTION_INTERVAL=60000      # Metrics collection interval (ms)
PERFORMANCE_MONITORING=true            # Enable performance monitoring

# File Processing
MAX_CONCURRENT_UPLOADS=5               # Max concurrent file uploads
TEMP_DIR=./temp                        # Temporary directory
UPLOAD_DIR=./uploads                   # Upload directory

# SSL/TLS Configuration (for production)
SSL_CERT_PATH=                         # SSL certificate path
SSL_KEY_PATH=                          # SSL private key path
FORCE_HTTPS=false                      # Force HTTPS redirect

# CDN Configuration
CDN_URL=                              # CDN base URL
STATIC_URL=/static                    # Static assets URL

# Email Configuration (if needed)
SMTP_HOST=                            # SMTP server host
SMTP_PORT=587                         # SMTP server port
SMTP_USER=                            # SMTP username
SMTP_PASS=                            # SMTP password
