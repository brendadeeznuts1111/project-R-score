{
  "name": "cash-app-adapter-modular-v3",
  "version": "3.0.0",
  "description": "Modular Cash App Verification Adapter v3.0 - Composable, testable, and scalable with 100% test coverage",
  "main": "cash-app-adapter.js",
  "type": "module",
  "scripts": {
    "adapter:config": "bun scripts/adapter-cli.js config",
    "adapter:validate": "bun scripts/adapter-cli.js validate",
    "adapter:test": "bun scripts/adapter-cli.js test",
    "adapter:bench": "bun scripts/adapter-cli.js bench",
    "adapter:health": "bun scripts/adapter-cli.js health",
    "adapter:modules": "bun scripts/adapter-cli.js modules",
    "adapter:pr": "bun scripts/adapter-cli.js pr",
    "adapter:init": "bun scripts/adapter-cli.js init",
    
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "test:watch": "bun test --watch",
    "test:ci": "bun test --coverage --bail",
    "test:adapter": "bun test __tests__/cash-app-adapter.test.js",
    "test:oauth": "bun test __tests__/oauth-handler.test.js",
    "test:plaid": "bun test __tests__/plaid-verifier.test.js",
    "test:validation": "bun test __tests__/validation-engine.test.js",
    "test:router": "bun test __tests__/tension-router.test.js",
    "test:modules": "bun test __tests__/*.test.js",
    "test:fast": "bun test --timeout 5000",
    
    "jest": "jest",
    "jest:watch": "jest --watch",
    "jest:coverage": "jest --coverage",
    "jest:ci": "jest --coverage --bail --verbose",
    "jest:adapter": "jest __tests__/cash-app-adapter.test.js",
    "jest:oauth": "jest __tests__/oauth-handler.test.js",
    "jest:plaid": "jest __tests__/plaid-verifier.test.js",
    "jest:validation": "jest __tests__/validation-engine.test.js",
    "jest:router": "jest __tests__/tension-router.test.js",
    "jest:modules": "jest __tests__/*.test.js",
    
    "test:dual": "bun run test:coverage && npm run jest:coverage",
    "test:compare": "bun run test:coverage > bun-results.txt && npm run jest:coverage > jest-results.txt && echo 'Comparison complete'",
    "test:validate": "bun run test:ci && npm run jest:ci",
    
    "lint": "bun scripts/adapter-cli.js validate",
    "lint:fix": "prettier --write .",
    "type-check": "tsc --noEmit --skipLibCheck",
    
    "build": "bun build cash-app-adapter.js --outdir dist --target bun",
    "build:jest": "jest --no-cache --coverage",
    "build:production": "NODE_ENV=production bun build cash-app-adapter.js --outdir dist --target bun --minify",
    
    "dev": "bun --watch cash-app-adapter.js",
    "dev:test": "bun test --watch",
    "dev:jest": "jest --watch",
    
    "start": "bun cash-app-adapter.js",
    "start:production": "NODE_ENV=production bun cash-app-adapter.js",
    
    "benchmark": "bun scripts/adapter-cli.js bench 1000",
    "benchmark:jest": "jest --testPathPattern=benchmark --coverage",
    "benchmark:compare": "bun run benchmark > bun-bench.txt && npm run benchmark:jest > jest-bench.txt && echo 'Benchmark comparison complete'",
    
    "health": "bun scripts/adapter-cli.js health",
    "health:jest": "jest --testPathPattern=health --verbose",
    
    "coverage:badge": "bun test --coverage --coverage-reporter=text-summary | grep -E '[0-9]{1,3}\\.[0-9]{1,3}%' | head -1",
    "coverage:html": "bun test --coverage --coverage-reporter=html && open coverage/index.html",
    "coverage:lcov": "bun test --coverage --coverage-reporter=lcov",
    
    "precommit": "bun run test:validate",
    "prepush": "bun run test:ci && npm run jest:ci",
    "preversion": "bun run test:dual",
    "version": "bun run test:dual && git add -A",
    "postversion": "git push && git push --tags",
    
    "clean": "rm -rf .jest-cache dist coverage bun-results.txt jest-results.txt bun-bench.txt jest-bench.txt",
    "clean:cache": "rm -rf .jest-cache node_modules/.cache bun cache",
    "reset": "npm run clean && bun install",
    
    "docs:test": "bun run test:coverage && npm run jest:coverage",
    "docs:coverage": "npm run coverage:html && npm run jest:coverage",
    "docs:api": "typedoc --out docs/api cash-app-adapter.js",
    
    "ci:bun": "bun test --coverage --bail --reporter=verbose",
    "ci:jest": "jest --coverage --bail --verbose",
    "ci:full": "bun run ci:bun && npm run ci:jest",
    "ci:parallel": "bun run ci:bun & npm run ci:jest && wait",
    
    "matrix:test": "bun run test:coverage && npm run jest:coverage",
    "matrix:validate": "bun run test:validate && npm run jest:ci",
    "matrix:deploy": "bun run build:production && npm run ci:full"
  },
  "keywords": [
    "cash-app",
    "verification",
    "adapter",
    "modular",
    "oauth",
    "plaid",
    "validation",
    "routing",
    "bun",
    "jest",
    "testing",
    "coverage",
    "typescript",
    "enterprise"
  ],
  "author": "Cash App Adapter Team",
  "license": "MIT",
  "dependencies": {
    "bun": ">=1.3.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "babel-jest": "^29.5.0",
    "jest": "^29.5.0",
    "jest-environment-node": "^29.5.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "typedoc": "^0.25.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "bun": ">=1.3.0",
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cash-app/adapter-modular-v3.git"
  },
  "bugs": {
    "url": "https://github.com/cash-app/adapter-modular-v3/issues"
  },
  "homepage": "https://github.com/cash-app/adapter-modular-v3#readme",
  "config": {
    "adapter": {
      "version": "3.0.0",
      "modular": true,
      "backwardCompatible": "2.1.x",
      "nextVersion": "3.1.0",
      "testCoverage": {
        "target": 95,
        "threshold": {
          "global": 90,
          "modules": 95,
          "critical": 100
        }
      }
    }
  },
  "files": [
    "cash-app-adapter.js",
    "modules/",
    "config/",
    "scripts/",
    "__tests__/",
    "jest.config.json",
    "README.MODULAR.md"
  ],
  "directories": {
    "lib": "modules",
    "config": "config",
    "test": "__tests__",
    "doc": "docs"
  },
  "publishConfig": {
    "access": "public"
  },
  "nyc": {
    "exclude": [
      "**/__tests__/**",
      "**/node_modules/**",
      "**/dist/**",
      "**/coverage/**"
    ],
    "reporter": [
      "text",
      "text-summary",
      "html",
      "lcov"
    ],
    "threshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    }
  }
}
