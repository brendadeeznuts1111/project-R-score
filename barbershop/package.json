{
  "name": "barbershop-bun-demo",
  "version": "1.0.0",
  "description": "ðŸ—ï¸ Bun Metafile & Virtual Files Visualizer with R2 Integration",
  "type": "module",
  "scripts": {
    "start": "bun run demo-pro.html",
    "dev": "bun --hot demo-pro.html",
    "build": "bun build demo-scripts.js --outfile demo-bundle.js --target=browser",
    "build:server": "bun build src/core/barber-server.ts --outfile dist/barber-server.js --target=bun",
    "build:dashboard": "bun build src/core/barbershop-dashboard.ts --outfile dist/barbershop-dashboard.js --target=bun",
    "build:meta": "bun build src/core/barber-server.ts --outfile dist/barber-server.js --metafile=dist/meta.json --target=bun",
    "build:prod": "bun build src/core/barber-server.ts --outfile dist/barber-server.js --minify --sourcemap --target=bun",
    "start:server": "bun run src/core/barber-server.ts",
    "start:dashboard": "bun run src/core/barbershop-dashboard.ts",
    "start:tickets": "bun run src/core/barbershop-tickets.ts",
    "dev:server": "bun --hot src/core/barber-server.ts",
    "dev:dashboard": "bun --hot src/core/barbershop-dashboard.ts",
    "test": "bun test tests/unit/ tests/integration/",
    "test:unit": "bun test tests/unit/",
    "test:integration": "bun test tests/integration/",
    "test:r2": "bun run src/r2/r2-connection-test.ts",
    "setup:r2": "./setup-r2.sh",
    "validate:demo": "bun run demo-scripts.js",
    "profile:cpu": "bun --cpu-prof --cpu-prof-md run src/core/barber-server.ts",
    "profile:heap": "bun --heap-prof --heap-prof-md run src/core/barber-server.ts",
    "profile:sampling": "bun run src/profile/sampling-profile.ts",
    "profile:quick": "bun run src/profile/sampling-profile.ts --quick",
    "profile:upload": "bun run src/r2/upload-latest-profile.ts",
    "profile:list": "bun run src/r2/list-r2-profiles.ts",
    "benchmark": "bun run src/debug/benchmark.ts",
    "benchmark:websocket": "bun run scripts/analysis/ws-secrets-bench.ts",
    "benchmark:vault": "bun run scripts/secrets/vault-sim.ts",
    "secrets:field": "bun run scripts/secrets/secrets-field.ts",
    "secrets:server": "bun run scripts/secrets/secrets-field-server.ts",
    "secrets:boost": "bun run scripts/secrets/secret-boost.ts",
    "secrets:vault": "bun run scripts/secrets/vault-sim.ts",
    "security:audit": "bun run scripts/security/security-audit.ts",
    "security:citadel": "bun run scripts/security/security-citadel.ts",
    "ops:monitor": "bun run scripts/operations/monitor-expirations.ts",
    "ops:lifecycle": "bun run scripts/operations/factorywager-lifecycle.ts",
    "ops:rollback": "bun run scripts/operations/test-rollback.ts",
    "analyze:graphs": "bun run scripts/analysis/generate-graphs.ts",
    "debug:config": "bun run src/debug/debug-config.ts",
    "debug:gaps": "bun run src/debug/test-system-gaps.ts",
    "debug:fix": "bun run src/debug/fix-system-gaps.ts",
    "kimi:analyze": "kimi -e 'Analyze performance in src/core/'",
    "kimi:review": "kimi -e 'Review code in src/core/barber-server.ts'",
    "monitor:status": "curl -s http://localhost:3000/api/health | jq .",
    "monitor:runtime": "curl -s http://localhost:3000/ops/runtime | jq .",
    "monitor:r2": "curl -s http://localhost:3000/ops/r2-status | jq .",
    "docker:build": "docker build -t barbershop .",
    "docker:run": "docker run -p 3000:3000 barbershop",
    "lint": "bun x eslint src/ scripts/ lib/",
    "fmt": "bun x prettier --write '**/*.ts'",
    "typecheck": "bun x tsc --noEmit"
  },
  "dependencies": {
    "bun": "latest"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "engines": {
    "bun": ">=1.3.6"
  },
  "keywords": [
    "bun",
    "metafile",
    "virtual-files",
    "r2",
    "executablePath",
    "build-tools"
  ],
  "author": "Barbershop Demo",
  "license": "MIT"
}
