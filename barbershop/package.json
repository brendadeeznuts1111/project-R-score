    "bunlock:test": "bun run -e \"import BunLock from './src/core/bunlock'; const lock = new BunLock(); console.log('Testing lock system...'); const id = await lock.acquire('test', 'user', 5000); console.log('Lock ID:', id); await lock.release(id); console.log('Lock released!'); lock.close();\"",
    "bunlock:stats": "bun run -e \"import BunLock from './src/core/bunlock'; const lock = new BunLock(); console.log(JSON.stringify(lock.getStats(), null, 2)); lock.close();\"",
    "bunlock:stress-test": "bun run -e \"import BunLock from './src/core/bunlock'; const lock = new BunLock(); console.log('Running stress test...'); const promises = []; for (let i = 0; i < 100; i++) { promises.push(lock.acquire('resource-' + i, 'user-' + i, 30000)); } const results = await Promise.all(promises); console.log('Acquired', results.filter(r => r).length, 'locks'); lock.close();\"",
    "================ DASHBOARD SYSTEM v2 ================": "",
    "dashboard:admin": "bun run -e \"import { createAdminDashboard } from './src/dashboard'; const db = createAdminDashboard(); console.log(JSON.stringify(db.build(), null, 2));\"",
