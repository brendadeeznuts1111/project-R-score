{
  "name": "barbershop",
  "version": "1.0.0",
  "description": "Bun-native barbershop demo with real-time dashboard, WebSocket, and R2 integration",
  "type": "module",
  "scripts": {
    "start": "bun run demo/demo-pro.html",
    "dev": "bun --hot demo/demo-pro.html",
    "build": "bun build demo/demo-scripts.js --outfile demo/demo-bundle.js --target=browser",
    "build:server": "bun build src/core/barber-server.ts --outfile dist/server.js --target=bun",
    "build:dashboard": "bun build src/core/barbershop-dashboard.ts --outfile dist/dashboard.js --target=bun",
    "build:meta": "bun build src/core/barber-server.ts --outfile dist/server.js --metafile=dist/meta.json --target=bun",
    "build:prod": "bun build src/core/barber-server.ts --outfile dist/server.js --minify --sourcemap --target=bun",
    "start:server": "bun run src/core/barber-server.ts",
    "start:dashboard": "bun run src/core/barbershop-dashboard.ts",
    "start:tickets": "bun run src/core/barbershop-tickets.ts",
    "start:gateway": "bun run src/core/gateway-dashboard.ts",
    "start:openclaw": "bun run openclaw/dashboard-server.ts",
    "dev:server": "bun --hot src/core/barber-server.ts",
    "dev:dashboard": "bun --hot src/core/barbershop-dashboard.ts",
    "dev:gateway": "bun --hot src/core/gateway-dashboard.ts",
    "docs": "bun run cli/bun-docs.ts",
    "docs:index": "bun run cli/bun-docs.ts index",
    "docs:search": "bun run cli/bun-docs.ts search",
    "docs:status": "bun run cli/bun-docs.ts status",
    "vectorize": "bun run cli/vectorize-cli.ts",
    "vectorize:secrets:status": "bun run cli/vectorize-cli.ts secrets status",
    "vectorize:secrets:set-token": "bun run cli/vectorize-cli.ts secrets set-token",
    "vectorize:secrets:set-account-id": "bun run cli/vectorize-cli.ts secrets set-account-id",
    "vectorize:indexes:list": "bun run cli/vectorize-cli.ts indexes list",
    "vectorize:index:barbers": "bun run cli/vectorize-cli.ts index barbers",
    "vectorize:index:customers": "bun run cli/vectorize-cli.ts index customers",
    "vectorize:index:all": "bun run cli/vectorize-cli.ts index all",
    "vectorize:setup": "bun run cli/vectorize-cli.ts setup",
    "security:demo": "bun run src/utils/security.ts",
    "metrics:demo": "bun run src/core/metrics.ts",
    "circuit:demo": "bun run src/utils/circuit-breaker.ts",
    "ratelimit:demo": "bun run src/utils/rate-limiter.ts",
    "graphql:demo": "bun run src/utils/graphql.ts",
    "logger:demo": "bun run src/utils/structured-logger.ts",
    "scheduler:demo": "bun run src/utils/scheduler.ts",
    "config:demo": "bun run src/utils/config-loader.ts",
    "flags:demo": "bun run src/utils/feature-flags.ts",
    "test": "bun test tests/",
    "test:unit": "bun test tests/unit/",
    "test:integration": "bun test tests/integration/",
    "test:r2": "bun run src/r2/r2-connection-test.ts",
    "setup:r2": "./setup-r2.sh",
    "profile:cpu": "bun --cpu-prof --cpu-prof-md run src/core/barber-server.ts",
    "profile:heap": "bun --heap-prof --heap-prof-md run src/core/barber-server.ts",
    "profile:sampling": "bun run src/profile/sampling-profile.ts",
    "profile:quick": "bun run src/profile/sampling-profile.ts --quick",
    "benchmark": "bun run benchmarks/run-all.bench.ts",
    "benchmark:security": "bun run benchmarks/security.bench.ts",
    "benchmark:resilience": "bun run benchmarks/resilience.bench.ts",
    "benchmark:infrastructure": "bun run benchmarks/infrastructure.bench.ts",
    "secrets:field": "bun run scripts/secrets/secrets-field.ts",
    "secrets:server": "bun run scripts/secrets/secrets-field-server.ts",
    "security:audit": "bun run scripts/security/security-audit.ts",
    "ops:monitor": "bun run scripts/operations/monitor-expirations.ts",
    "ops:lifecycle": "bun run scripts/operations/factorywager-lifecycle.ts",
    "debug:config": "bun run src/debug/debug-config.ts",
    "monitor:status": "curl -s http://localhost:3000/api/health | jq .",
    "monitor:runtime": "curl -s http://localhost:3000/ops/runtime | jq .",
    "docker:build": "docker build -t barbershop .",
    "docker:run": "docker run -p 3000:3000 barbershop",
    "lint": "bun x eslint src/ scripts/ lib/",
    "fmt": "bun x prettier --write '**/*.ts'",
    "typecheck": "bun x tsc --noEmit",
    "gateway:dashboard": "bun run src/core/gateway-dashboard.ts",
    "gateway:enhanced": "bun run src/core/gateway-dashboard-enhanced.ts",
    "gateway:openclaw": "bun run openclaw/dashboard-server.ts",
    "gateway:cli": "bun run openclaw/cli.ts",
    "openclaw:cli": "bun run openclaw/cli.ts",
    "openclaw:dashboard": "bun run openclaw/dashboard-server.ts",
    "debug:quick": "bun run scripts/debug-smart.ts"
  },
  "dependencies": {
    "bun": "latest"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "mitata": "1.0.34"
  },
  "engines": {
    "bun": ">=1.3.6"
  },
  "keywords": [
    "bun",
    "barbershop",
    "dashboard",
    "websocket",
    "r2"
  ],
  "author": "Barbershop Demo",
  "license": "MIT"
}